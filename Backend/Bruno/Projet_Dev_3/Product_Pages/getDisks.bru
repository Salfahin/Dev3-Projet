meta {
  name: getDisks
  type: http
  seq: 6
}

get {
  url: http://188.166.38.93:3001/api/parts/disks
  body: none
  auth: inherit
}

tests {
  // 1. Status code check
  test("should return 200 OK", function () {
    expect(res.getStatus()).to.equal(200);
  });
  
  // 2. Response should be an array
  test("response should be an array", function () {
    const body = res.getBody();
    expect(body).to.be.an("array");
    expect(body.length).to.be.greaterThan(0);
  });
  
  // 3. Each storage item has required fields
  test("each storage should have id, type, name, manufacturer, price, specifications", function () {
    const storages = res.getBody();
    storages.forEach(s => {
      expect(s).to.have.property("id");
      expect(s).to.have.property("type");
      expect(s).to.have.property("name");
      expect(s).to.have.property("manufacturer");
      expect(s).to.have.property("price");
      expect(s).to.have.property("specifications");
    });
  });
  
  // 4. id should be positive numbers
  test("id should be positive numbers", function () {
    const storages = res.getBody();
    storages.forEach(s => {
      expect(s.id).to.be.a("number");
      expect(s.id).to.be.greaterThan(0);
    });
  });
  
  // 5. type should equal 6 for all storage items
  test("type should equal 6 for all storage items", function () {
    const storages = res.getBody();
    storages.forEach(s => {
      expect(s.type).to.equal(6);
    });
  });
  
  // 6. price should be null or non-negative
  test("price should be null or >= 0", function () {
    const storages = res.getBody();
    storages.forEach(s => {
      if (s.price !== null) {
        expect(s.price).to.be.a("number");
        expect(s.price).to.be.greaterThanOrEqual(0);
      }
    });
  });
  
  // 7. specifications should be an object with string values
  test("specifications should be an object with string values", function () {
    const storages = res.getBody();
    storages.forEach(s => {
      expect(s.specifications).to.be.an("object");
      Object.values(s.specifications).forEach(v => {
        expect(v === null || typeof v === "string").to.equal(true);
      });
    });
  });
  
}

settings {
  encodeUrl: true
}
