meta {
  name: getCoolers
  type: http
  seq: 3
}

get {
  url: http://188.166.38.93:3001/api/parts/cpu_coolers
  body: none
  auth: inherit
}

tests {
  // 1. Status Code Check
  test("should return 200 OK", function () {
    expect(res.getStatus()).to.equal(200);
  });
  
  // 2. Response is an Array
  test("response should be an array", function () {
    const body = res.getBody();
    expect(body).to.be.an("array");
    expect(body.length).to.be.greaterThan(0);
  });
  
  // 3. Each cooler has required fields
  test("each cooler should have id, type, name, manufacturer, price, specifications", function () {
    const coolers = res.getBody();
    coolers.forEach(c => {
      expect(c).to.have.property("id");
      expect(c).to.have.property("type");
      expect(c).to.have.property("name");
      expect(c).to.have.property("manufacturer");
      expect(c).to.have.property("price");
      expect(c).to.have.property("specifications");
    });
  });
  
  // 4. id should be positive numbers
  test("id should be positive numbers", function () {
    const coolers = res.getBody();
    coolers.forEach(c => {
      expect(c.id).to.be.a("number");
      expect(c.id).to.be.greaterThan(0);
    });
  });
  
  // 5. type should equal 1 for all CPU coolers
  test("type should equal 1 for all CPU coolers", function () {
    const coolers = res.getBody();
    coolers.forEach(c => {
      expect(c.type).to.equal(1);
    });
  });
  
  // 6. price should be null or non-negative
  test("price should be null or >= 0", function () {
    const coolers = res.getBody();
    coolers.forEach(c => {
      if (c.price !== null) {
        expect(c.price).to.be.a("number");
        expect(c.price).to.be.greaterThanOrEqual(0);
      }
    });
  });
  
  // 7. specifications should be an object with string values
  test("specifications should be an object with string values", function () {
    const coolers = res.getBody();
    coolers.forEach(c => {
      expect(c.specifications).to.be.an("object");
      Object.values(c.specifications).forEach(v => {
        expect(v === null || typeof v === "string").to.equal(true);
      });
    });
  });
  
}

settings {
  encodeUrl: true
}
